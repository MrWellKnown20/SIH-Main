<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alumni Connect Job Listings</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />ef="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/AdminJobListings.css" />
    <link rel="stylesheet" href="/sidebar.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include("partials/sidebar.ejs") %>

        <!-- Main content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
          >
            <h1 class="h2">Job Listings</h1>
            <a href="/admin/post"
              ><button class="btn btn-primary">Post New Job</button></a
            >
          </div>

          <!-- Job Listings -->
          <div class="row">
            <% for(let job of allJobs) { %>
            <div class="col-md-4">
              <div class="card mb-4">
                <img
                  src="<%= job.image %>"
                  class="card-img-top"
                  alt="Financial Analyst"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= job.title %></h5>
                  <p class="card-text">
                    <!-- Financial Advisory Experts<br />Chicago, IL -->
                    <%= job.company %>
                  </p>
                  <p class="card-text">
                    <!-- Financial Advisory Experts<br />Chicago, IL -->
                    <%= job.location %>
                  </p>
                  <div class="star">
                    <a
                      href="/admin/<%= job._id %>"
                      class="btn btn-outline-primary"
                      >Edit</a
                    >
                    <form
                      method="POST"
                      action="/admin/<%=job._id%>?_method=DELETE"
                    >
                      <button
                        class="btn btn-outline-primary"
                        onclick="return confirm('Are you sure you want to delete this item?');"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </main>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
