    <div class="container mt-5">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card">
            <div class="btn-group btn-group-toggle mb-4" id="buttonGroup">
              <button
                type="button"
                name="action"
                value="admin"
                class="btn btn-outline-primary active"
                onclick="setFormAction('admin', this)"
              >
                Admin
              </button>
              <button
                type="button"
                name="action"
                value="alumni"
                class="btn btn-outline-primary"
                onclick="setFormAction('alumni', this)"
              >
                Alumni
              </button>
              <button
                type="button"
                name="action"
                value="user"
                class="btn btn-outline-primary"
                onclick="setFormAction('user', this)"
              >
                User
              </button>
            </div>
            <div class="card-body">
              <h3 class="card-title text-center">Login into your account</h3>
              <p class="card-text text-center">
                Welcome back! Please login to your account.
              </p>

              <form id="myForm" action="/admin" method="POST">
                <div class="form-group">
                  <label for="username">Username</label>
                  <input
                    type="text"
                    class="form-control"
                    id="username"
                    name="username"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="password">Password</label>
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    required
                  />
                </div>
                <button type="submit" class="btn btn-success btn-block">
                  Login
                </button>
              </form>

              <div
                class="text-center mt-4 d-flex justify-content-center align-items-center"
              >
                <p class="mb-0 mr-2">Create an account</p>
                <a href="/signup" class="btn btn-primary px-5">Sign Up</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function setFormAction(action, element) {
        const form = document.getElementById("myForm");
        form.action = `/${action}`;

        // Get all buttons in the button group
        var buttons = document.querySelectorAll("#buttonGroup .btn");

        // Remove the 'active' class from all buttons
        buttons.forEach(function (button) {
          button.classList.remove("active", "btn-primary");
          button.classList.add("btn-outline-primary");
        });

        // Add the 'active' class to the clicked button
        element.classList.remove("btn-outline-primary");
        element.classList.add("active", "btn-primary");
      }
    </script>

