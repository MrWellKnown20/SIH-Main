        <%- include("partials/Usersidebar.ejs") %>

        <!-- Main content -->
        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
          <div
            class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
          >
            <h1 class="h2">Welcome back!</h1>
          </div>

          <!-- Dashboard Cards -->
          <div class="row">
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5>Total Followers</h5>
                  <h3>8,450</h3>
                  <p class="text-danger">↓ 15%</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5>New Messages</h5>
                  <h3>120</h3>
                  <p class="text-danger">↓ 5%</p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card mb-4">
                <div class="card-body">
                  <h5>Profile Views</h5>
                  <h3>3,200</h3>
                  <p class="text-success">↑ 10%</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Filter Buttons -->

          <!-- Event Cards Section -->
          <section class="container my-5">
            <h2 class="text-center mb-5">Upcoming Events</h2>
            <div class="row g-4">
              <!-- Engineering Summit -->
              <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                  <img
                    src="../events.jpg"
                    class="card-img-top"
                    alt="Engineering Summit"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Engineering Summit</h5>
                    <p class="card-text">Date: March 15, 2024</p>
                    <p class="card-text">
                      Explore cutting-edge innovations in engineering with
                      industry leaders.
                    </p>
                    <a href="#" class="btn btn-primary">View Details</a>
                  </div>
                </div>
              </div>
              <!-- Marketing Conference -->
              <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                  <img
                    src="../events.jpg"
                    class="card-img-top"
                    alt="Marketing Conference"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Marketing Conference</h5>
                    <p class="card-text">Date: April 10, 2024</p>
                    <p class="card-text">
                      Join experts in digital marketing to learn the latest
                      strategies.
                    </p>
                    <a href="#" class="btn btn-primary">View Details</a>
                  </div>
                </div>
              </div>
              <!-- Cybersecurity Bootcamp -->
              <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                  <img
                    src="../events.jpg"
                    class="card-img-top"
                    alt="Cybersecurity Bootcamp"
                  />
                  <div class="card-body">
                    <h5 class="card-title">Cybersecurity Bootcamp</h5>
                    <p class="card-text">Date: May 5, 2024</p>
                    <p class="card-text">
                      Hands-on training on cybersecurity practices and threat
                      management.
                    </p>
                    <a href="#" class="btn btn-primary">View Details</a>
                  </div>
                </div>
              </div>
              <!-- AI Symposium -->
              <div class="col-md-6 col-lg-3">
                <div class="card h-100">
                  <img
                    src="../events.jpg"
                    class="card-img-top"
                    alt="AI Symposium"
                  />
                  <div class="card-body">
                    <h5 class="card-title">AI Symposium</h5>
                    <p class="card-text">Date: June 20, 2024</p>
                    <p class="card-text">
                      Delve into the latest AI research and its applications.
                    </p>
                    <a href="#" class="btn btn-primary">View Details</a>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Donation Summary -->
          <h2>Donation Summary</h2>
          <div class="row">
            <div class="col-md-4">
              <div class="card mb-4">
                <div class="card-body">
                  <h5>Total Donations</h5>
                  <h3>$5,000</h3>
                  <p class="text-danger">↓ 50%</p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card mb-4">
                <div class="card-body">
