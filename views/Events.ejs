<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upcoming Events</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!-- Custom CSS -->

    <link rel="stylesheet" href="/home.css" />
    <link rel="stylesheet" href="/Events.css" />
    <link rel="stylesheet" href="/navbar.css" />
    <link rel="stylesheet" href="/footer.css" />
  </head>
  <body>
    <!-- Header Section -->

    <%- include("partials/navbar.ejs") %>

    <div class="hero">
      <div class="hero-content">
        <h1 class="display-4">Upcoming Events</h1>
        <p class="lead">Reconnect with fellow alumni at our upcoming events.</p>
        <a href="/signup" class="btn btn-primary btn-lg">Learn More</a>
      </div>
    </div>

    <!-- Filter Buttons -->
    <section class="container my-4">
      <div class="row">
        <div class="col-12 text-center">
          <div class="btn-group" role="group" aria-label="Event type filters">
            <button type="button" class="btn btn-primary active">All</button>
            <button type="button" class="btn btn-outline-primary">
              Web Design
            </button>
            <button type="button" class="btn btn-outline-primary">UX</button>
            <button type="button" class="btn btn-outline-primary">UI</button>
            <button type="button" class="btn btn-outline-primary">
              Branding
            </button>
            <button type="button" class="btn btn-outline-primary">
              Marketing
            </button>
          </div>
        </div>
        <div class="col-12 text-end mt-3">
          <select class="form-select w-auto" aria-label="Filter by Event Type">
            <option selected>Filter by Event Type</option>
            <!-- Add options here if needed -->
          </select>
        </div>
      </div>
    </section>

    <!-- Event Cards Section -->

    <section class="container my-5">
      <h2 class="text-center mb-5">Upcoming Events</h2>
      <div class="row g-4">
        <% for(data of result){ %>
        <!-- Engineering Summit -->
        <div class="col-md-4 col-lg-4">
          <div class="card h-100">
            <img
              src="<%= data.image %>"
              class="card-img-top"
              alt="Engineering Summit"
            />
            <div class="card-body">
              <h5 class="card-title"><%= data.title %></h5>
              <p class="card-text"><%= data.date%></p>
              <p class="card-text"><%= data.description %></p>
              <a href="/login" class="btn btn-primary"
                >View Details</a
              >
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </section>

    <%- include("partials/footer.ejs") %>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
