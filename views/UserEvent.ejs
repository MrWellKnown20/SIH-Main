<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Upcoming Events</title>
    <link
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

    <link rel="stylesheet" href="/userEvents.css" />
    <link rel="stylesheet" href="/sidebarUser.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <%- include("partials/UserSidebar.ejs") %>
      <main class="main-content">
        <header class="main-header">
          <h1>Upcoming Events</h1>
        </header>

        <!-- Filter Buttons -->
        <section class="container my-4">
          <div class="row">
            <div class="col-12 text-center">
              <div
                class="btn-group"
                role="group"
                aria-label="Event type filters"
              >
                <button type="button" class="btn btn-primary active">
                  All
                </button>
                <button type="button" class="btn btn-outline-primary">
                  Web Design
                </button>
                <button type="button" class="btn btn-outline-primary">
                  UX
                </button>
                <button type="button" class="btn btn-outline-primary">
                  UI
                </button>
                <button type="button" class="btn btn-outline-primary">
                  Branding
                </button>
                <button type="button" class="btn btn-outline-primary">
                  Marketing
                </button>
              </div>
            </div>
            <div class="col-12 text-end mt-3">
              <select
                class="form-select w-auto"
                aria-label="Filter by Event Type"
              >
                <option selected>Filter by Event Type</option>
                <!-- Add options here if needed -->
              </select>
            </div>
          </div>
        </section>

        <section class="container my-5">
          <h2 class="text-center mb-5">Upcoming Events</h2>
          <div class="row g-4">
            <% for(data of result){ %>
            <!-- Engineering Summit -->
            <div style="margin-top: 40px;" class="col-md-4 col-lg-6">
              <div class="card h-100">
                <img
                  src="<%= data.image %>"
                  class="card-img-top"
                  alt="Engineering Summit"
                />
                <div class="card-body">
                  <h5 class="card-title"><%= data.title %></h5>
                  <p class="card-text"><%= data.date%></p>
                  <p class="card-text"><%= data.description %></p>
                  <a href="/events/<%= data.title %>" class="btn btn-primary"
                    >View Details</a
                  >
                </div>
              </div>
            </div>
            <% } %>
          </div>
        </section>
      </main>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
