<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alumni Connect - Dashboard</title>
    <link rel="stylesheet" href="/AdminDashboard.css" />
    <link rel="stylesheet" href="/sidebar.css" />
    <link
      href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body>
    <div class="dashboard-container">
      <% if (success && success.length> 0) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <div><%= success %></div>
        <div>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close"
          ></button>
        </div>
      </div>
      <% } %> <%- include("partials/sidebar.ejs") %>

      <main class="main-content">
        <header class="main-header">
          <h1>Dashboard</h1>
        </header>

        <section class="metrics">
          <div class="metric">
            <h3>Total Alumni</h3>
            <div class="metric-content">
              <span class="metric-value">1,542</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-down"></i> 5% decrease from last
                year</span
              >
            </div>
          </div>
          <div class="metric">
            <h3>Posted Jobs</h3>
            <div class="metric-content">
              <span class="metric-value">248</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-up"></i> 12% increase this month</span
              >
            </div>
          </div>
          <div class="metric">
            <h3>Active Forum Topics</h3>
            <div class="metric-content">
              <span class="metric-value">36</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-down"></i> 8% decrease this week</span
              >
            </div>
          </div>
        </section>

        <section class="upcoming-events">
          <h2>Posted Jobs</h2>
          <div class="events-grid">
            <% for(let job of alldata) { %>
            <div class="event-card">
              <img src="<%= job.image %>" alt="Tech Symposium" />
              <div class="event-info">
                <h3><%= job.title %></h3>
                <p><%= job.company %></p>
                <p><%= job.location %></p>
                <a href="#" class="event-link"> </a>
              </div>
              <a href="/admin/job"> <button>Job listings</button></a>
              <a href="/fetchApply/<%= job.title %>">
                <button>View Appliance</button></a
              >
            </div>
            <% } %>
          </div>
        </section>
      </main>
    </div>
  </body>
</html>
