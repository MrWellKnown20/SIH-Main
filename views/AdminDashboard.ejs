      <%- include("partials/sidebar.ejs") %>

      <main class="main-content">
        <header class="main-header">
          <h1>Dashboard</h1>
        </header>

        <section class="metrics">
          <div class="metric">
            <h3>Total Alumni</h3>
            <div class="metric-content">
              <span class="metric-value">1,542</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-down"></i> 5% decrease from last
                year</span
              >
            </div>
          </div>
          <div class="metric">
            <h3>Posted Jobs</h3>
            <div class="metric-content">
              <span class="metric-value">248</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-up"></i> 12% increase this month</span
              >
            </div>
          </div>
          <div class="metric">
            <h3>Active Forum Topics</h3>
            <div class="metric-content">
              <span class="metric-value">36</span>
              <span class="metric-change"
                ><i class="fas fa-arrow-down"></i> 8% decrease this week</span
              >
            </div>
          </div>
        </section>

        <section class="upcoming-events">
          <h2>Upcoming Events</h2>
          <div class="events-grid">
            <div class="event-card">
              <img src="../assets/images/events.jpg" alt="Tech Symposium" />
              <div class="event-info">
                <h3>Tech Symposium</h3>
                <p>Date: November 10, 2023</p>
                <p>Time: 10:00 AM, Location: Grand Hall</p>
                <a href="#" class="event-link">Learn More</a>
              </div>
            </div>
            <div class="event-card">
              <img src="../assets/images/events.jpg" alt="Music Fest" />
              <div class="event-info">
                <h3>Music Fest</h3>
                <p>Date: November 15, 2023</p>
                <p>Time: 6:00 PM, Location: Central Park</p>
                <a href="#" class="event-link">Details</a>
              </div>
            </div>
            <div class="event-card">
              <img src="../assets/images/events.jpg" alt="Career Expo" />
              <div class="event-info">
                <h3>Career Expo</h3>
                <p>Date: November 20, 2023</p>
                <p>Time: 9:00 AM, Location: Expo Center</p>
                <a href="#" class="event-link">Details</a>
              </div>
            </div>
            <div class="event-card">
              <img src="../assets/images/events.jpg" alt="Holiday Market" />
              <div class="event-info">
                <h3>Holiday Market</h3>
                <p>Date: December 1, 2023</p>
                <p>Time: 5:00 PM, Location: Downtown Square</p>
                <a href="#" class="event-link">Explore</a>
              </div>
            </div>
          </div>
        </section>
